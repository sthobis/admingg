//- banner.jade
- var title = "AdminGG by AkoMid"
- var page = "banner"

doctype html
html

    // head
    head
        include ./include/head.jade

    // body
    body

        .admingg

            // sidebar
            include ./include/sidebar.jade

            .content

                // header
                include ./include/header.jade

                // main content
                div(role="main")
                    .section-header
                        h1.title Banner
                        h3.description Default Banner

                    .banner-wrap(style="background-image:url('img/harbour.jpg')")

                    .section-header
                        h3.description With Overlay

                    .banner-wrap.overlay-default(style="background-image:url('img/harbour.jpg')")
                    .banner-wrap.overlay-blue(style="background-image:url('img/harbour.jpg')")
                    .banner-wrap.overlay-orange(style="background-image:url('img/harbour.jpg')")

                    .section-header
                        h3.description With Title and Description

                    .banner-wrap.overlay-default(style="background-image:url('img/harbour.jpg')")
                        .text
                            h1.title Insert Title Here
                            p.description Insert Detailed and Self-Explanatory Description Here           

                // footer
                include ./include/footer.jade

        // script
        include ./include/script.jade