//- banner.jade
- var title = "AdminGG by AkoMid"
- var page = "banner"

doctype html
html

    // head
    head
        include ./include/head.jade

    // body
    body

        .admingg

            // sidebar
            include ./include/sidebar.jade

            .content

                // header
                include ./include/header.jade

                // main content
                div(role="main")
                    .section-header
                        h1.title Banner
                        p.description Usage example of banner

                    h1 Using Image
                    .banner-wrap
                        img(src="img/harbour.jpeg" alt="Harbour")

                    h1 Using Background Property
                    .banner-wrap(style="background-image:url('img/harbour.jpeg')")

                    h1 With Overlay
                    .banner-wrap.overlay-default
                        img(src="img/harbour.jpeg" alt="Harbour")
                    .banner-wrap.overlay-blue
                        img(src="img/harbour.jpeg" alt="Harbour")
                    .banner-wrap.overlay-orange
                        img(src="img/harbour.jpeg" alt="Harbour")

                    h1 With Title and Description
                    .banner-wrap.overlay-default
                        img(src="img/harbour.jpeg" alt="Harbour")
                        .text
                            h1 Insert Title Here
                            p Insert Detailed and Self-Explanatory Description Here           

                // footer
                include ./include/footer.jade

        // script
        include ./include/script.jade